<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_send_alerts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="srilankainstituteofinformationtechnology.smartsecureduniversity.SendAlerts">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/group"
        android:id="@+id/imageView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/call"
        android:id="@+id/imageView10"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/button12"
        android:layout_alignLeft="@+id/imageView9"
        android:layout_alignStart="@+id/imageView9" />

    <TextView
        android:text="@string/send_alerts_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="15dp"
        android:id="@+id/textView10"
        android:layout_below="@+id/imageView10"
        android:layout_centerHorizontal="true" />



    <Button
        android:text="Alert Emergency Contact"
        android:background="#FF3C33"
        android:textColor="#FFFFFF"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/sendSMS"
        android:onClick="onSend"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button12"
        android:layout_alignStart="@+id/button12"
        android:layout_marginBottom="16dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_toLeftOf="@+id/textView9"
        android:layout_toStartOf="@+id/textView9"
        android:layout_marginTop="11dp"
        android:id="@+id/textView18" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView18"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView19" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView19"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:id="@+id/textView20" />

    <Button
        android:text="Respond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_UserResponse"
        android:background="#FF3C33"
        android:textColor="#FFFFFF"
        android:onClick="LoadUserResponseView" />

    <Button
        android:text="Alert Security Team"
        android:background="#FF3C33"
        android:textColor="#FFFFFF"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/button12"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/send_alerts_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/imageView9"
        android:layout_toLeftOf="@+id/btn_UserResponse"
        android:layout_toStartOf="@+id/btn_UserResponse" />


</RelativeLayout>
