<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_response"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="srilankainstituteofinformationtechnology.smartsecureduniversity.UserResponse">

    <TextView
        android:text="Respond to the latest Emergency Alert and make sure you are not secured!!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView17"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:text="Recent Alert ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView21"
        android:layout_below="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="69dp"
        android:layout_marginStart="69dp"
        android:textSize="18sp" />

    <TextView
        android:text="AlertIDView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView21"
        android:layout_toRightOf="@+id/textView21"
        android:layout_toEndOf="@+id/textView21"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:id="@+id/txt_RecentAlertID"
        android:textSize="20sp" />

    <Button
        android:text="Noticed"
        android:layout_marginTop="29dp"
        android:id="@+id/btn_UserResponse"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="@android:color/holo_orange_dark"
        android:textSize="20sp"
        android:textColor="@color/cardview_light_background"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Comment:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView23"
        android:textSize="18sp" />

    <EditText
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/tf_UserResponseComment"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:singleLine="true"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textAlignment="viewStart"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView23"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
