<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_guard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="srilankainstituteofinformationtechnology.smartsecureduniversity.PersonalGuard">

    <TextView
        android:text="@string/personal_guard_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textSize="15dp"
        android:gravity="center"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/mark"
        android:layout_marginTop="12dp"
        android:id="@+id/imageView5"
        android:layout_below="@+id/button10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/personal_guard_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:gravity="center"
        android:id="@+id/textView8"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Emergency Contact"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:id="@+id/button10"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:background="#338DFF"
        android:textColor="#FFFFFF"
        android:onClick="LoadEmergencyContacts"
        />

    <Button
        android:text="Alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:background="#FF3C33"
        android:textColor="#FFFFFF"
        android:onClick="LoadSendAlerts"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignStart="@+id/button10"
        android:layout_alignRight="@+id/button10"
        android:layout_alignEnd="@+id/button10" />

    <TextView
        android:text="Personal Security Guard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/btn_PSGToggle"
        android:layout_alignBottom="@+id/btn_PSGToggle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_PSGToggle"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView8"
        android:layout_alignRight="@+id/button11"
        android:layout_alignEnd="@+id/button11"
        android:onClick="toggleclick" />
</RelativeLayout>
